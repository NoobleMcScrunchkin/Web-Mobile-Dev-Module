head
    meta(http-equiv='content-type' content='text/html; charset=UTF-8')
    meta(charset='utf-8')
    title Storystrap Template
    meta(name='generator' content='Bootply')
    meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1')
    link(href='/static/bootstrap.min.css' rel='stylesheet')
    link(href='//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css' rel='stylesheet')
    //if lt IE 9
        script(src='//html5shim.googlecode.com/svn/trunk/html5.js')
    link(href='/static/styles.css' rel='stylesheet')
header.navbar.navbar-bright.navbar-fixed-top(role='banner')
    .container
        .navbar-header
            button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') Home
        nav.collapse.navbar-collapse(role='navigation')
            ul.nav.navbar-nav
                each navLink in nav
                    li
                        a(href=navLink.link)=navLink.title
            ul.nav.navbar-right.navbar-nav
                li.dropdown
                    a.dropdown-toggle(href='#' data-toggle='dropdown')
                        i.glyphicon.glyphicon-search
                    ul.dropdown-menu(style='padding:12px;')
                        form.form-inline
                            button.btn.btn-default.pull-right(type='submit')
                                i.glyphicon.glyphicon-search
                            input.form-control.pull-left(type='text' placeholder='Search')
#masthead
    .container
        .row
            .col-md-7
                h1
                    =title
                    p.lead
            .col-md-5
                .well.well-lg
                    .row
                        .col-sm-12
    // /cont
    .container
        .row
            .col-md-12
                .top-spacer    
    // /cont
.container
    .row
        .col-md-12
            .panel
                .panel-body
                    // /stories
                    each book, index in books
                        .row
                            br
                            .col-md-2.col-sm-3.text-center
                                a.story-title(href='#')
                                    img.img-circle(alt='' src=`http://api.randomuser.me/portraits/thumb/${Math.random() < 0.5 ? "men" : "women"}/${index}.jpg` style='width:100px;height:100px')
                            .col-md-10.col-sm-9
                                h3= book.title
                                .row
                                    .col-xs-9
                                        h4
                                            span.label.label-default= book.author 
                                        h4
                                            small.text-muted(style="font-family:courier,'new courier';")
                                                | 2 hours ago    &bull; 
                                                a.text-muted(href=`/books/${book._id}`) Read More
                                    .col-xs-3
                                br
                                br
                        hr
                    // /stories
                    a.btn.btn-primary.pull-right.btnNext(href='/')
                        | More 
                        i.glyphicon.glyphicon-chevron-right
        // /col-12
hr
#footer.container
    .row
        .col.col-sm-12
            h1 Follow Us
            .btn-group
                a.btn.btn-twitter.btn-lg(href='#')
                    i.icon-twitter.icon-large
                    |    Twitter
                a.btn.btn-facebook.btn-lg(href='#')
                    i.icon-facebook.icon-large
                    |    Facebook
                a.btn.btn-google-plus.btn-lg(href='#')
                    i.icon-google-plus.icon-large
                    |    Google+
hr
hr
footer
    .container
        .row
            .col-sm-6
                ul.list-inline
                    li
                        i.icon-facebook.icon-2x
                    li
                        i.icon-twitter.icon-2x
                    li
                        i.icon-google-plus.icon-2x
                    li
                        i.icon-pinterest.icon-2x
            .col-sm-6
                p.pull-right
                    | Built with 
                    i.icon-heart-empty
                    |    at 
                    a(href='http://www.bootply.com') Bootply
